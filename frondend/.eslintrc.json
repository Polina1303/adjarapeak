{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    // "react/jsx-no-undef": ["error", { "allowGlobals": true }],
    "react/react-in-jsx-scope": "off",
    "no-loss-of-precision": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
